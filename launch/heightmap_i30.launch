<launch>

  <param name="use_sim_time" value="true" />

  <node pkg="velodyne_height_map" type="heightmap_node" name="heightmap_node" output="screen">
    <remap from="/velodyne_points" to="merged_velodyne"/>
    <param name="height_threshold" value="0.1"/>
    <param name="cell_size" value="0.25"/>
    <param name="negative_threshold" value="-1.3"/>
    <param name="grid_dimensions" value="40"/>

  </node>

</launch>
